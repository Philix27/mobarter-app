{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "backend(clean)",
        "backend(chore)",
        "backend(feat)",
        "backend(fix)",
        "backend(perf)",
        "backend(refactor)",
        "backend(ci)",
        "backend",
        "client",
        "clean",
        "frontend",
        "ci",
        "chore",
        "docs",
        "ticket",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style"
      ]
    ]
  }
}
